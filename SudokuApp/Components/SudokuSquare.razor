@inherits ComponentBase

<MudItem>
	<MudPaper Style=@GetStyle() Outlined="true" Square="true">
		<MudButton Variant="Variant.Filled"
			Class="rounded-0"
			Style=@GetButtonStyle()
			Color=@GetColor()
			@onclick ="OnClick"
			>
			<MudText Style=@GetTextStyle()>@DisplayValue</MudText>
		</MudButton>
		
	</MudPaper>
</MudItem>
