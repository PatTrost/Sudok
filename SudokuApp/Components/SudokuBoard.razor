@inherits ComponentBase

<MudPaper Style="height:677px;width:677px;" Square="true">


    @for (int i = 0; i < 9; i++)
    {
        int row = i;

        @if (row % 3 == 0 && row != 0)
        {
            <MudDivider />
        }

        <MudGrid Spacing="0" Justify="Justify.Center">
            @for (int j = 0; j < 9; j++)
            {
                int col = j;
                int refnum = col + (row * 9);
                int group = ((row / 3) * 3) + ((col / 3) + 1);
                @if (col % 3 == 0 && col != 0)
                {
                    <MudDivider Vertical="true" FlexItem="true" />
                }
                <SudokuSquare @ref="sudokuSquares[refnum]" Clicked="SquareClicked" Given="_givens[refnum]" Row="row" Column="col" Group="group"/>
            }
        </MudGrid>

    }

</MudPaper>

